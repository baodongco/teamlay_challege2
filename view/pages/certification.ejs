<div class="tab-pane fade" id="certification">
    <h4> Certification</h4>
    <hr/>
    <form class="form-horizontal" id="certification-form" >
        <input name="id" type="hidden" >
        <div class="form-group row">
            <label class="col-sm-3 col-lg-2 control-label">Title</label>
            <div class="col-sm-9 col-lg-10 controls">
                <input name="title" type="text" placeholder="Name of certification" class="form-control" >
            </div>
        </div>
        <!--Designation-->
        <div class="form-group row">
            <label class="col-sm-3 col-lg-2 control-label">Certification Authority</label>
            <div class="col-sm-9 col-lg-10 controls">
                <input  name="certificationAuthority" type="text" placeholder="Name of the organization issuing the certificate"class="form-control" >
            </div>
        </div>
        <!--Date(s)-->
        <div class="form-group">
            <label class="col-sm-3 col-lg-2 control-label">Date</label>
            <div class="col-sm-5 col-lg-10 controls">
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                    <input name="date" type="text" placeholder="" class="form-control date-picker" readonly="readonly"/>
                </div>
                    <span id="date-error-message"></span>
            </div>
        </div>
        <!--Details-->
        <div class="form-group">
            <label class="col-sm-3 col-lg-2 control-label">Details</label>
            <div class="col-sm-9 col-lg-10 controls">
                <textarea name="details" placeholder="Write some details about your certifications..." class="form-control col-md-12" rows="6"></textarea>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-3 col-lg-2 control-label">&nbsp;</label>
            <div class="col-sm-9 col-lg-10 controls">
                <button type="button" id="btnAddListCertification"  class="btn btn-success"><span class="glyphicon glyphicon-plus"></span>&nbsp;Add To List</i></button>
                <button type="button" id="btnSaveCertification" class="btn btn-success" style="display:none"><span class="glyphicon glyphicon-floppy-save"></span>&nbsp;Save</i></button>
                <button type="button" id="btnCancelEdit" class="btn" style="display:none"><span class="glyphicon glyphicon-share-alt"></span>&nbsp;Cancel</i></button>
            </div>
        </div>
    </form>

    <div class="form-group row">
        <div class="box">
            <div class="box-title">
                <h4> List of Certification</h4>
            </div>
            <div class="box-content">
                <div class="table-big">
                    <table class="table table-striped table-hover fill-head" id="list-certification">
                        <thead>
                            <tr style="font-size: 13px">
                                <th>Title</th>
                                <th>Certification Authority</th>
                                <th>Date</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody id="certification_list" style="font-size:13px">
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>
<script type="text/javascript" src="js/certification.js"></script>
