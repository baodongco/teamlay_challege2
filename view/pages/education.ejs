<div class="tab-pane fade" id="education">
    <h4> Education</h4>
    <hr/>  
    <form class="form-horizontal" id="education-form" >
        <div class="form-group">
            <label class="col-sm-3 col-lg-2 control-label">Institute</label>
            <div class="col-sm-9 col-lg-10 controls">
                <input maxlength="100" type="text" placeholder="Enter your institute" name="institute" class="form-control"> 
            </div>    
        </div>
        <!-Degree->
        <div class="form-group">
            <label class="col-sm-3 col-lg-2 control-label">Degree</label>
            <div class="col-sm-9 col-lg-10 controls">
                <input maxlength="100" type="text" placeholder="Enter your degree" name="degree" class="form-control" >
            </div>    
        </div>
        <!-Date(s)->
        <div class="form-group">
                <label class="col-sm-3 col-lg-2 control-label">Date(s)</label>
                    <div class="col-sm-5 col-lg-10 controls">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                            <input type="text" placeholder="From date To date" class="form-control date-range" name="date" readonly="readonly"/>                            
                        </div>
                    </div>
        </div>
        <!-Details-> 
        <div class="form-group">
                <label class="col-sm-3 col-lg-2 control-label">Details</label>
                <div class="col-sm-9 col-lg-10 controls">
                    <textarea class="form-control col-md-12" rows="6" name="detail"></textarea>
                </div>
        </div>
        <div class="form-group">
                <label class="col-sm-3 col-lg-2 control-label">&nbsp;</label>
                <div class="col-sm-9 col-lg-10 controls">
                    <button type="button" id="btnAddListEdu"  class="btn btn-success"><span class="glyphicon glyphicon-plus"></span>&nbsp;Add To List</button>
                    <button type="button" id="btnSaveEditEdu" class="btn btn-success" style="display:none"><span class="glyphicon glyphicon-floppy-save"></span>&nbsp;Save</button>
                    <button type="button" id="btnCancelEditEdu" class="btn" style="display:none"><span class="glyphicon glyphicon-share-alt"></span>&nbsp;Cancel</button>
                </div> 
                        
        </div>    
    </form>
           
        <div class="form-group">
            <div class="box">
                <div class="box-title">
                <h4> List of Education</h4>
                </div>
                <div class="box-content">
                    <div class="table-big">
                        <table class="table table-striped table-hover fill-head" id="list-education">
                        <thead>
                            <tr style="font-size: 13px">
                            <th class="col-md-1">#</th>
                            <th class="col-md-4">Institute</th>
                            <th class="col-md-3">Degree</th>
                            <th class="col-md-2">Date(s)</th>
                            <th class="col-md-2">Action</th>
                            </tr>
                        </thead>
                            <tbody>  
                                <tr>
                                <td colspan="5" align="center"> No data available </td>
                                </tr>                    
                            </tbody>
                            </table>
                    </div>
                </div>         
                    
            </div>            
        </div>        
</div>


<script type="text/javascript" src="js/education.js"></script>