<div class="tab-pane fade" id="summary">
    <h4>
        Summary
    </h4>          
    <hr/>
    <form class="form-horizontal"  id="summary-form" autocomplete="off">
        <!-Headline->
        <div class="form-group row">
            <label class="col-sm-3 col-lg-2 control-label">Headline</label>
            <div class="col-sm-9 col-lg-10 controls">
            <input type="text" name="headline"  class="form-control" placeholder="e.g. Web Designer, Sales Manager, Administrative Assistant etc">
            </div>
        </div>
    
        <!-Professional Summary->
        <div class="form-group row">
            <label class="col-sm-3 col-lg-2 control-label">Professional Summary</label>
            <div class="col-sm-9 col-lg-10 controls">
                <textarea placeholder="Add a short summary about yourself..." name="prosummary"  class="form-control col-md-12 wysihtml5" rows="6"></textarea>
                <span>Add a short summary about yourself highlighting your specialities and what value you can add for any employe</span>       
            </div>
        </div>
        
        <!-Button Save Summary->
        <div class="form-group row">
            <label class="col-sm-3 col-lg-2 control-label">&nbsp;</label>
            <div class="col-sm-9 col-lg-10 controls">
                <button type="button" id="btnSaveSummary" class="btn btn-success"><span class="glyphicon glyphicon-floppy-save"></span>&nbsp;Save</button>
            </div>    
        </div>
    </form>   
</div>
<script type="text/javascript" src="js/summary.js"></script>
