<div class="tab-pane fade" id="skill">
    <h4>Skill</h4>
    <hr/>
    <form class="panel-group form-horizontal" id="skill-form" autocomplete="off">
        <div class="panel panel-info">
            <div class="panel-body">
                <div class="skillname col-sm-4 col-lg-4">
                    <img  src="/img/default_avatar.jpg" class="default_avatar" />
                    <div class="form-group row">
                        <label class="col-sm-3 col-lg-3 control-label">Skill<span class="text-danger">&nbsp;*</span></label>
                        <div class="col-sm-9 col-lg-9 controls">
                                <input type="text" name="name" class="form-control valid" placeholder="Enter your skill"/>
                        </div>
                    </div>
                </div>
                <div class="skillinfo col-sm-8 col-lg-8">
                    <div class="content-skill col-sm-12 col-lg-12 row">
                        <div class="form-group row">
                            <label class="col-sm-3 col-lg-3 control-label">Expertise</label>
                            <div class="col-sm-9 col-lg-9 controls">
                                <div id="stars-default" data-rating="1">
                                    <input type="hidden" name="expertise" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 col-lg-3 control-label">Experience</label>
                            <div class="col-sm-5 col-lg-5 controls">
                            <select class="form-control" name="experience">
                                <option value="0 month">0 month</option>
                                <option value="1-6 months">1-6 months</option>
                                <option value="6-12 months">6-12 months</option>
                                <option value="1-2 years">1-2 years</option>
                                <option value="2-5 years">2-5 years</option>
                            </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 col-lg-3 control-label">Last year used</label>
                            <div class="col-sm-5 col-lg-5 controls">
                            <select class="form-control" name="lastyearused">
                            
                            </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 col-lg-3 control-label">&nbsp;</label>
                            <div class="col-sm-9 col-lg-9 controls">
                                <span class="label label-important">NOTE!</span><span class="text-danger">&nbsp;*</span> <span>The fields are required</span>
                            </div>
                        </div>
                        
                        <div class="form-group row">
                            <label class="col-sm-3 col-lg-3 control-label">&nbsp;</label>
                            <div class="col-sm-9 col-lg-9 controls">        
                                <button type="button" id="btnAddListSkill"  class="btn btn-success"><span class="glyphicon glyphicon-plus"></span>&nbsp;Add To List</button>
                                <button type="button" id="btnSaveEditSkill" class="btn btn-success" style="display:none"><span class="glyphicon glyphicon-floppy-save"></span>&nbsp;Save</button>
                                <button type="button" id="btnCancelEditSkill" class="btn" style="display:none"><span class="glyphicon glyphicon-share-alt"></span>&nbsp;Cancel</button>
                            </div>               
                        </div>
                        
                        
                    </div>
                </div>
                
            </div>
        </div>   
    </form>
    
    <div class="form-group">
            <div class="box">
                <div class="box-title">
                <h4> List of Skills</h4>
                </div>
                <div class="box-content">
                    <div class="table-big">
                        <table class="table table-striped table-hover fill-head" id="list-skill">
                            <thead>
                                <tr style="font-size: 13px">
                                    <th>#</th>
                                    <th>Skill</th>
                                    <th>Expertise</th>
                                    <th>Experience</th>
                                    <th>Last year used</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>  
                                   <td colspan="6" align="center"> No data available </td>                      
                            </tbody>
                        </table>
                    </div>
                </div>         
                    
            </div>            
         </div>
    <%- include ../pages/skillguide.ejs %>
</div>

<script type="text/javascript" src="js/skill.js"> </script>
