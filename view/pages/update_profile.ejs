<%- include ../layouts/header.ejs %>
<link rel="stylesheet" type="text/css" href="css/cv_list.css">

<script type="text/javascript" src="assets/jquery-validation/dist/jquery.validate.js"></script>
<script type="text/javascript" src="js/update_profile.js"></script>

<div class="container">
    <div class="section">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <div class="box">
                    <div class="box-title">
                        <h3>Edit Profile â†’</h3>
					</div>
					<div class="box-content">
                        <div class="panel panel-default">
                            <div class="panel-body">
                            
                            <div class="col-md-3">
                            </div>
                            <div class="col-md-6">
                            <% if(typeof(successMessage) !== 'undefined') {%>
                            <% if(successMessage.length>0) {%>
                            <div class="alert alert-success"><%= successMessage %></div>
                            <% } %>
                            <% } %>
                                <form id="form-update-profile" method="post" action="update-profile">
                                    <div class="form-group">
                                        <label><strong>Firstname</strong></label>
                                        <input type="text" class="form-control" id="firstname" name="firstname" value="<%= user.Firstname %>"/>
                                    </div>
                                    <div class="form-group">
                                        <label><strong>Lastname</strong></label>
                                        <input type="text" class="form-control" id="lastname" name="lastname" value="<%= user.Lastname %>"/>
                                    </div>
                                    <div class="form-group">
                                        <button type="button" onclick="location.href='/cv'" class="btn btn-default pull-right" style="margin-left:10px">Cancel</button>
                                        <button id="submit" type="submit" class="btn btn-primary pull-right">Update</button>
                                    </div>
                                </form>
                            </div>
                            <div class="col-md-3">
                            </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include ../layouts/footer.ejs %>
