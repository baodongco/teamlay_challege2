
<div class="tab-pane fade in active"   id="contact-info">
     <h4>
        Contact Information
     </h4>
     <hr/>
     <form class="form-horizontal" id="contact_info-form" autocomplete="off" >
        <div class="row">
            <div class="col-sm-8 col-lg-8">
                <!-first name->
                <div class="form-group row">
                    <label class="col-sm-3 col-lg-3 control-label">First Name <span class="text-danger">*</span></label>
                    <div class="col-sm-9 col-lg-9 controls">
                        <input type="text"  placeholder="Enter your first name"  class="form-control" name="firstname">
                    </div>
                </div>
                <!-last name->
                <div class="form-group row">
                    <label class="col-sm-3 col-lg-3 control-label">Last Name <span class="text-danger">*</span></label>
                    <div class="col-sm-9 col-lg-9 controls">
                        <input type="text"  placeholder="Enter your last name" class="form-control" name="lastname">
                        
                    </div>
                </div>
            </div>
            <div class="col-sm-4 col-lg-4">
                <!-avatar->
                <div class="form-group row" id="avatarsection">
                    <div id="imageshow">
                        <img id="preview" src="/img/default_avatar.jpg"/>
                        <label  class="text-danger sizeimg" style="display:none;">The limited file size is 5MB.</label>
                        <label  class="text-danger validimg" style="display:none;">Please enter an valid image.</label>
                        <span class="help-block filesize" ></span>
                        <!-- The Modal -->
                        <div id="myModal" class="" data-keyboard="false" data-backdrop="static">
                            
                            <img class="modal-content" id="img01">
                            <span class="close btn btn-danger btn-circle" id="cancelBtn">
                                <i class="fa fa-times"></i>
                            </span>
                            <div id="caption"></div>
                        </div>
                        <input type="file"  accept="image/*" onchange="loadFile(event)" style="display:none;" name="avatar" id="avatar">
                    </div>
                    <div id="option" >
                        <label for="avatar" class="btn btn-success  btn-circle">
                        <i class="glyphicon glyphicon-cloud-upload"></i>
                        </label>
                        <span class="btn btn-danger btn-circle" id="del_avatar" style="opacity: 0;">
                            <i class="fa fa-times"></i>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <!-email->
        <div class="form-group row">
            <label class="col-sm-3 col-lg-2 control-label" for="email">Email<span class="text-danger">*</span></label>
                <div class="col-sm-9 col-lg-10 controls">
                <input type="text" name="email" class="form-control" placeholder="Enter your email">
            </div>
        </div>
        <!-phone->
        <div class="form-group row">
            <label class="col-sm-3 col-lg-2 control-label">Phone<span class="text-danger">*</span></label>
            <div class="col-sm-9 col-lg-10 controls">
                <input type="text" placeholder="+84.11112222" class="form-control" name="phone">
                
            </div>
        </div>
        <!-website->
        <div class="form-group row">
            <label class="col-sm-3 col-lg-2 control-label">Website</label>
            <div class="col-sm-9 col-lg-10 controls">
                <input type="text" placeholder="Enter your website" class="form-control" name="website">
            </div>
        </div>
        <!-address->
        <div class="form-group row">
            <label class="col-sm-3 col-lg-2 control-label">Address</label>
            <div class="col-sm-9 col-lg-10 controls">
                <input type="text" placeholder="Enter your address" class="form-control" name="address">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-3 col-lg-2 control-label">&nbsp;</label>
            <div class="col-sm-9 col-lg-10 controls">
            
                <span class="label label-important">NOTE!</span><span class="text-danger">&nbsp;*</span> <span>The fields are required</span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-3 col-lg-2 control-label">&nbsp;</label>
            <div class="col-sm-9 col-lg-10 controls">
                <button type="button" id="btnSaveContact_Info" class="btn btn-success"><span class="glyphicon glyphicon-floppy-save"></span>&nbsp;Save</button>
            </div>
        </div>
        
    </form>   
</div>
<script type="text/javascript" src="js/cv.js"></script>
<script type="text/javascript" src="js/contact_info.js"></script>


